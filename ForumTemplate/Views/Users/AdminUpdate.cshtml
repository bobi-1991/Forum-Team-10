@{
    this.ViewData["Title"] = "AdminUpdate";
}
@model AdminEditViewModel

<h2>@this.Model.Username</h2>
<form asp-controller="Users" asp-action="AdminUpdate" method="post">
    <div>
        <label asp-for="UserName" class="form-label"></label>
        <br />
        <input asp-for="Username" type="text" class="form-input" />
        <span asp-validation-for="Username" class="form-error"></span>
    </div>
    <div>
        <label asp-for="FirstName" class="form-label"></label>
        <br />
        <input asp-for="FirstName" type="text" class="form-input" />
        <span asp-validation-for="FirstName" class="form-error"></span>
    </div>
    <div>
        <label asp-for="LastName" class="form-label"></label>
        <br />
        <input asp-for="LastName" type="text" class="form-input" />
        <span asp-validation-for="LastName" class="form-error"></span>
    </div>
    <div>
        <label asp-for="Email" class="form-label"></label>
        <br />
        <input asp-for="Email" type="text" class="form-input" />
        <span asp-validation-for="Email" class="form-error"></span>
    </div>
    <div>
        <label asp-for="Password" class="form-label"></label>
        <br />
        <input asp-for="Password" type="text" class="form-input" />
        <span asp-validation-for="Password" class="form-error"></span>
    </div>
    <div>
        <label asp-for="Country" class="form-label"></label>
        <br />
        <input asp-for="Country" type="text" class="form-input" />
        <span asp-validation-for="Country" class="form-error"></span>
    </div>
    <br>
    <div>
        <div class="form-inline">
            <label asp-for="IsAdmin" class="form-label"></label>
            <select asp-for="IsAdmin" class="form-select">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="IsAdmin" class="form-error"></span>
        </div>
        <br><br>
        <div class="form-inline">
            <label asp-for="IsBlocked" class="form-label"></label>
            <select asp-for="IsBlocked" class="form-select">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="IsBlocked" class="form-error"></span>
        </div>
    </div>
    <br><br>

    <input type="submit" value="Confirm changes" class="btn-primary" />
    <a asp-controller="Users" asp-action="Info" class="nav">Back</a>
</form>