@{
    this.ViewData["Title"] = "Create";
}
@model PostViewModel

<h2>Create a new post</h2>
<form asp-controller="Posts" asp-action="Create" method="post">
    <div>
        <label asp-for="Title" class="form-label"></label>
        <br />
        <input asp-for="Title" type="text" class="form-input" />
        <span asp-validation-for="Title" class="form-error"></span>
    </div>
    <div>
        <label asp-for="Content" class="form-label"></label>
        <br />
        <input asp-for="Content" type="text" class="form-input" />
        <span asp-validation-for="Content" class="form-error"></span>
    </div>
    <input type="submit" value="Create" class="btn-primary" />
    <a asp-controller="Posts" asp-action="Index" class="nav">Back</a>
</form>