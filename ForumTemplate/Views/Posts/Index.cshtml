@{
    this.ViewData["Title"] = "Home";
}
@using ForumTemplate.Models;
@model IEnumerable<Post>

<h2>Posts</h2>

<a asp-controller="Posts" asp-action="Create" class="nav">Create a new post </a>

<div class="table">
    <div class="header">
        <div class="header-cell">Title</div>
        <div class="header-cell">Actions</div>
    </div>

    @{
        foreach (var post in this.Model)
        {
            <div class="row">
                <div class="cell">@post.Title</div>

                <div class="cell">
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.PostId" class="btn btn-primary">Details</a>
                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@post.PostId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
</div>